{
    "title": "Zed Swagger API",
    "summary": "Backend/frontend",
    "description": "Mongo, Express, Angular, Node",
    "termsOfService": "https://example.com/terms/",
    "contact": {
        "name": "API Support",
        "url": "https://www.example.com/support",
        "email": "maverik@maverik.io"
    },
    "license": {
        "name": "Apache 2.0",
        "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.1",
    "openapi": "3.0.0",
    "servers": [
        {
        "url": "./",
        "description": "Project Zed Swagger API"
        }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "security": [
        {"BearerAuth": []}
    ],
    "tags": [
        {
            "name": "Ping",
            "description": "Sanity"
        },
        {
            "name": "Auth",
            "description": "Auth module"
        },
        {
            "name": "Users",
            "description": "Users module"
        }
    ],
    "paths": {
        "/ping": {
            "get": {
                "summary": "Pong",
                "tags": ["Ping"],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "pong"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/foo": {
            "get": {
                "summary": "Foo",
                "tags": ["Ping"],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "bar"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Login",
                "tags": ["Auth"],
                "requestBody": {
                    "description": "Credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Credentials"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "jwt": {
                                            "type": "string",
                                            "example": "..."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "summary": "List all users",
                "tags": ["Users"],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserDetailView"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create new user",
                "tags": ["Users"],
                "requestBody": {
                    "description": "New user",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Retrieve a user",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserDetailView"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update a user",
                "requestBody": {
                    "description": "User",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok"
                    }
                }
            },
            "delete": {
                "summary": "Delete a user",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": "true"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No content"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "Credentials": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "foo"
                    },
                    "password": {
                        "type": "password",
                        "example": "password"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string",
                        "example": "Foo"
                    },
                    "username": {
                        "type": "string",
                        "example": "foo"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    }
                }
            },
            "UserDetailView": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string",
                        "example": "Foo"
                    },
                    "username": {
                        "type": "string",
                        "example": "foo"
                    }
                }
            }
        },
        "parameters": {
            "id": {
                "name": "id",
                "in": "path",
                "description": "Item ID",
                "required": true,
                "schema": {
                    "type": "string"
                }
            }
        }
    }
}